<div class="container">
  <div class="list">
  <ul>
    <% @tasks.each do |t| %>
      <li><%= link_to t.title, task_path(t) %>
        <%= link_to "Delete #{t.title}",
          task_path(t),
          method: :delete,
          data: { confirm: "Are you sure to delete #{t.title}?" } %>
      </li>
    <% end %>
  </ul>
  </div>
  <hr>
  <div>
    <h3><%= link_to "Create a new task", new_path %></h3>
  </div>
</div>
